{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<style>
    .detail-container {
        max-width: 600px;
        margin: 0 auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .detail-header {
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .detail-header h1 {
        color: #5d4037;
        font-size: 24px;
        font-weight: 600;
        margin: 0;
    }

    .detail-row {
        padding: 15px 0;
        border-bottom: 1px solid #f8f8f8;
        display: flex;
        justify-content: space-between;
    }

    .detail-label {
        color: #8d6e63;
        font-weight: 500;
        font-size: 14px;
    }

    .detail-value {
        color: #5d4037;
        font-size: 14px;
    }

    .badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
        margin-right: 5px;
    }

    .badge-admin {
        background: #e3f2fd;
        color: #1976d2;
    }

    .badge-staff {
        background: #fff3e0;
        color: #f57c00;
    }

    .badge-user {
        background: #e8f5e9;
        color: #388e3c;
    }

    .actions {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .btn-warning {
        background: #FF9800;
        color: white;
    }

    .btn-warning:hover {
        background: #F57C00;
    }

    .btn-secondary {
        background: #e0e0e0;
        color: #5d4037;
    }

    .btn-secondary:hover {
        background: #bdbdbd;
    }

    .user-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #6d4c41 0%, #8d6e63 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 32px;
        margin: 0 auto 20px;
    }
</style>

<div class="detail-container">
    <div class="detail-header">
        <h1>ðŸ‘¤ User Details</h1>
    </div>

    <div class="user-avatar">
        <svg fill="currentColor" viewBox="0 0 24 24" style="width: 40px; height: 40px;">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
    </div>

    <div class="detail-row">
        <span class="detail-label">User ID</span>
        <span class="detail-value">#{{ user.id }}</span>
    </div>

    <div class="detail-row">
        <span class="detail-label">Email Address</span>
        <span class="detail-value">{{ user.email }}</span>
    </div>

    <div class="detail-row">
        <span class="detail-label">User Roles</span>
        <div class="detail-value">
            {% for role in user.roles %}
                {% if role == 'ROLE_ADMIN' %}
                    <span class="badge badge-admin">Administrator</span>
                {% elseif role == 'ROLE_STAFF' %}
                    <span class="badge badge-staff">Staff</span>
                {% elseif role == 'ROLE_USER' %}
                    <span class="badge badge-user">Customer</span>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="actions">
        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit User
        </a>
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
    </div>
</div>
{% endblock %}