{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<style>
    .page-header {
        background: white;
        padding: 25px 30px;
        border-radius: 12px;
        margin-bottom: 25px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header h1 {
        color: #5d4037;
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background: #6d4c41;
        color: white;
    }

    .btn-primary:hover {
        background: #5d4037;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 14px;
    }

    .btn-info {
        background: #2196F3;
        color: white;
    }

    .btn-info:hover {
        background: #1976D2;
    }

    .btn-warning {
        background: #FF9800;
        color: white;
    }

    .btn-warning:hover {
        background: #F57C00;
    }

    .btn-danger {
        background: #f44336;
        color: white;
    }

    .btn-danger:hover {
        background: #d32f2f;
    }

    .btn-success {
        background: #4caf50;
        color: white;
    }

    .btn-success:hover {
        background: #388e3c;
    }

    .table-container {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table thead {
        border-bottom: 2px solid #f0f0f0;
    }

    .table th {
        padding: 12px;
        text-align: left;
        color: #8d6e63;
        font-size: 13px;
        font-weight: 600;
    }

    .table td {
        padding: 15px 12px;
        border-bottom: 1px solid #f8f8f8;
        color: #5d4037;
    }

    .table tbody tr:hover {
        background: #f8f5f2;
    }

    .badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-active {
        background: #e8f5e9;
        color: #388e3c;
    }

    .badge-inactive {
        background: #ffebee;
        color: #c62828;
    }

    .badge-admin {
        background: #e3f2fd;
        color: #1976d2;
    }

    .badge-user {
        background: #f3e5f5;
        color: #7b1fa2;
    }

    .actions {
        display: flex;
        gap: 8px;
    }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #95a5a6;
    }

    .delete-form {
        display: inline;
    }

    .toggle-form {
        display: inline;
    }
</style>

<div class="page-header">
    <h1>ðŸ‘¥ User Management</h1>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add New User
    </a>
</div>

<div class="table-container">
    {% if users is empty %}
        <div class="no-data">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 60px; height: 60px; margin: 0 auto 15px; display: block; color: #bdc3c7;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <p>No users found</p>
        </div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Status</th>
                    <th>Last Login</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>#{{ user.id }}</td>
                        <td><strong>{{ user.email }}</strong></td>
                        <td>
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="badge badge-admin">Admin</span>
                            {% else %}
                                <span class="badge badge-user">User</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.isActive %}
                                <span class="badge badge-active">Active</span>
                            {% else %}
                                <span class="badge badge-inactive">Inactive</span>
                            {% endif %}
                        </td>
                        <td>{{ user.lastLogin ? user.lastLogin|date('M d, Y h:i A') : 'Never' }}</td>
                        <td>
                            <div class="actions">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                
                                <form method="post" action="{{ path('app_user_toggle_status', {'id': user.id}) }}" class="toggle-form" onsubmit="return confirm('Are you sure you want to {{ user.isActive ? 'deactivate' : 'activate' }} this user?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                    <button class="btn btn-sm {{ user.isActive ? 'btn-warning' : 'btn-success' }}">
                                        {{ user.isActive ? 'Deactivate' : 'Activate' }}
                                    </button>
                                </form>

                                <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}