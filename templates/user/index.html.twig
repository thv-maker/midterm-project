{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<style>
    .page-header {
        background: white;
        padding: 25px 30px;
        border-radius: 12px;
        margin-bottom: 25px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header h1 {
        color: #5d4037;
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background: #6d4c41;
        color: white;
    }

    .btn-primary:hover {
        background: #5d4037;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 14px;
    }

    .btn-info {
        background: #2196F3;
        color: white;
    }

    .btn-info:hover {
        background: #1976D2;
    }

    .btn-warning {
        background: #FF9800;
        color: white;
    }

    .btn-warning:hover {
        background: #F57C00;
    }

    .btn-danger {
        background: #f44336;
        color: white;
    }

    .btn-danger:hover {
        background: #d32f2f;
    }

    .table-container {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table thead {
        border-bottom: 2px solid #f0f0f0;
    }

    .table th {
        padding: 12px;
        text-align: left;
        color: #8d6e63;
        font-size: 13px;
        font-weight: 600;
    }

    .table td {
        padding: 15px 12px;
        border-bottom: 1px solid #f8f8f8;
        color: #5d4037;
    }

    .table tbody tr:hover {
        background: #f8f5f2;
    }

    .badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-admin {
        background: #e3f2fd;
        color: #1976d2;
    }

    .badge-staff {
        background: #fff3e0;
        color: #f57c00;
    }

    .badge-user {
        background: #e8f5e9;
        color: #388e3c;
    }

    .actions {
        display: flex;
        gap: 8px;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-success {
        background: #e8f5e9;
        color: #2e7d32;
        border-left: 4px solid #4caf50;
    }

    .alert-error {
        background: #ffebee;
        color: #c62828;
        border-left: 4px solid #f44336;
    }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #95a5a6;
    }
</style>

<div class="page-header">
    <h1>ðŸ‘¥ User Management</h1>
    <a href="{{ path('app_user_new') }}" class="btn btn-primary">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add New User
    </a>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-error">{{ message }}</div>
{% endfor %}

<div class="table-container">
    {% if users is empty %}
        <div class="no-data">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 60px; height: 60px; margin: 0 auto 15px; display: block; color: #bdc3c7;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <p>No users found</p>
        </div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>#{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    <span class="badge badge-admin">Admin</span>
                                {% elseif role == 'ROLE_STAFF' %}
                                    <span class="badge badge-staff">Staff</span>
                                {% elseif role == 'ROLE_USER' %}
                                    <span class="badge badge-user">Customer</span>
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            <div class="actions">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                {% if user.id != app.user.id %}
                                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}