{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<style>
    .form-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        margin-bottom: 20px;
    }

    .form-header {
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .form-header h1 {
        color: #5d4037;
        font-size: 24px;
        font-weight: 600;
        margin: 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .form-label, label {
        display: block;
        color: #5d4037;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control, select, input[type="text"], input[type="email"], input[type="password"], input[type="checkbox"] {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

    input[type="checkbox"] {
        width: auto;
        margin-right: 8px;
    }

    .form-control:focus, select:focus, input:focus {
        outline: none;
        border-color: #6d4c41;
        box-shadow: 0 0 0 3px rgba(109, 76, 65, 0.1);
    }

    .input-help {
        font-size: 12px;
        color: #8d6e63;
        margin-top: 5px;
        display: block;
    }

    .form-actions {
        display: flex;
        gap: 10px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .btn-primary {
        background: #6d4c41;
        color: white;
    }

    .btn-primary:hover {
        background: #5d4037;
    }

    .btn-secondary {
        background: #e0e0e0;
        color: #5d4037;
    }

    .btn-secondary:hover {
        background: #bdbdbd;
    }

    .btn-danger {
        background: #f44336;
        color: white;
    }

    .btn-danger:hover {
        background: #d32f2f;
    }

    .delete-section {
        max-width: 800px;
        margin: 0 auto;
        background: #fff5f5;
        padding: 20px;
        border-radius: 12px;
        border: 2px solid #ffebee;
    }

    .delete-section h3 {
        color: #c62828;
        margin: 0 0 10px 0;
        font-size: 16px;
    }

    .delete-section p {
        color: #666;
        font-size: 14px;
        margin-bottom: 15px;
    }

    .form-error {
        color: #f44336;
        font-size: 12px;
        margin-top: 5px;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
    }

    .roles-section {
        background: #f8f5f2;
        padding: 15px;
        border-radius: 8px;
    }

    .role-checkbox {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .role-checkbox input {
        width: auto;
        margin-right: 10px;
    }
</style>

<div class="form-container">
    <div class="form-header">
        <h1>✏️ Edit User</h1>
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
            <span class="input-help">User's email address (used for login)</span>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword, 'New Password (leave blank to keep current)') }}
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Leave blank to keep current password'}}) }}
            {{ form_errors(form.plainPassword) }}
            <span class="input-help">Only fill this if you want to change the password</span>
        </div>

        <div class="form-group roles-section">
            {{ form_label(form.roles, 'User Roles') }}
            {{ form_widget(form.roles) }}
            {{ form_errors(form.roles) }}
            <span class="input-help">Select one or more roles for this user</span>
        </div>

        <div class="form-group">
            <div class="checkbox-group">
                {{ form_widget(form.isActive, {'attr': {'class': ''}}) }}
                {{ form_label(form.isActive) }}
            </div>
            {{ form_errors(form.isActive) }}
            <span class="input-help">Inactive users cannot log in</span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Update User
            </button>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Cancel</a>
        </div>
    {{ form_end(form) }}
</div>

<div class="delete-section">
    <h3>⚠️ Danger Zone</h3>
    <p>Once you delete this user, there is no going back. Please be certain.</p>
    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button class="btn btn-danger">Delete User</button>
    </form>
</div>
{% endblock %}