{% extends 'base.html.twig' %}

{% block title %}Stock Details{% endblock %}

{% block body %}
<style>
    .detail-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        margin-bottom: 20px;
    }

    .detail-header {
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .detail-header h1 {
        color: #5d4037;
        font-size: 24px;
        font-weight: 600;
        margin: 0;
    }

    .stock-card {
        background: #f8f5f2;
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 25px;
    }

    .stock-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .stock-product {
        font-size: 28px;
        font-weight: 700;
        color: #5d4037;
    }

    .badge {
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .badge-healthy {
        background: #e8f5e9;
        color: #388e3c;
    }

    .badge-low {
        background: #fff3e0;
        color: #f57c00;
    }

    .badge-out {
        background: #ffebee;
        color: #c62828;
    }

    .stock-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }

    .stat-box {
        background: white;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
    }

    .stat-label {
        font-size: 12px;
        color: #8d6e63;
        margin-bottom: 5px;
    }

    .stat-value {
        font-size: 24px;
        font-weight: 700;
        color: #5d4037;
    }

    .detail-row {
        padding: 15px 0;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        justify-content: space-between;
    }

    .detail-label {
        color: #8d6e63;
        font-weight: 500;
        font-size: 14px;
    }

    .detail-value {
        color: #5d4037;
        font-size: 14px;
        font-weight: 600;
    }

    .actions {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .btn-warning {
        background: #FF9800;
        color: white;
    }

    .btn-warning:hover {
        background: #F57C00;
    }

    .btn-secondary {
        background: #e0e0e0;
        color: #5d4037;
    }

    .btn-secondary:hover {
        background: #bdbdbd;
    }

    .btn-danger {
        background: #f44336;
        color: white;
    }

    .btn-danger:hover {
        background: #d32f2f;
    }

    .delete-section {
        max-width: 800px;
        margin: 0 auto;
        background: #fff5f5;
        padding: 20px;
        border-radius: 12px;
        border: 2px solid #ffebee;
    }

    .delete-section h3 {
        color: #c62828;
        margin: 0 0 10px 0;
        font-size: 16px;
    }

    .delete-section p {
        color: #666;
        font-size: 14px;
        margin-bottom: 15px;
    }
</style>

<div class="detail-container">
    <div class="detail-header">
        <h1>üì¶ Stock Details</h1>
    </div>

    <div class="stock-card">
        <div class="stock-header">
            <div class="stock-product">{{ stock.product.name }}</div>
            {% if stock.quantity == 0 %}
                <span class="badge badge-out">Out of Stock</span>
            {% elseif stock.quantity <= stock.reorderLevel %}
                <span class="badge badge-low">Low Stock</span>
            {% else %}
                <span class="badge badge-healthy">Healthy Stock</span>
            {% endif %}
        </div>

        <div class="stock-stats">
            <div class="stat-box">
                <div class="stat-label">Current Quantity</div>
                <div class="stat-value">{{ stock.quantity }}</div>
            </div>
            <div class="stat-box">
                <div class="stat-label">Reorder Level</div>
                <div class="stat-value">{{ stock.reorderLevel }}</div>
            </div>
            <div class="stat-box">
                <div class="stat-label">Stock ID</div>
                <div class="stat-value">#{{ stock.id }}</div>
            </div>
        </div>
    </div>

    <div class="detail-row">
        <span class="detail-label">Product Name</span>
        <span class="detail-value">{{ stock.product.name }}</span>
    </div>

    <div class="detail-row">
        <span class="detail-label">Last Updated</span>
        <span class="detail-value">
            {% if stock.lastUpdated %}
                {{ stock.lastUpdated|date('M d, Y h:i A') }}
            {% else %}
                N/A
            {% endif %}
        </span>
    </div>

    <div class="actions">
        <a href="{{ path('app_dashboard_stock_edit', {'id': stock.id}) }}" class="btn btn-warning">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Edit Stock
        </a>
        <a href="{{ path('app_dashboard_stocks') }}" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="delete-section">
    <h3>‚ö†Ô∏è Danger Zone</h3>
    <p>Once you delete this stock, there is no going back. Please be certain.</p>
    <form method="post" action="{{ path('app_stock_delete', {'id': stock.id}) }}" onsubmit="return confirm('Are you sure you want to delete this stock entry?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
        <button class="btn btn-danger">Delete Stock</button>
    </form>
</div>
{% endblock %}