                        </svg>
                        Customers
                    </a>
                </li>
            </ul>
        </aside>

        <!-- MAIN CONTENT -->
        <div class="content-wrapper">
            {% block body %}{% endblock %}
        </div>
    </div>

    <script>
        const links = document.querySelectorAll('.sidebar-menu a');
        links.forEach(link => {
            link.addEventListener('click', function(e) {
                links.forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>