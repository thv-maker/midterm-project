<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Carpe Diem Cafe{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f5f1ee;
        }

        .layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background: #6d4c41;
            color: white;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 25px 20px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar-header h2 {
            font-size: 20px;
            font-weight: 600;
        }

        .sidebar-menu {
            padding: 20px 0;
            padding-bottom: 100px; /* Space for logout button */
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 20px;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            transition: all 0.3s;
        }

        .menu-item:hover,
        .menu-item.active {
            background: rgba(255,255,255,0.1);
            color: white;
        }

        .menu-item svg,
        .menu-item i {
            width: 20px;
            height: 20px;
        }

        .main-content {
            flex: 1;
            padding: 30px;
            background: #f5f1ee;
        }

        .main-content.with-sidebar {
            margin-left: 250px;
        }

        .logout-btn {
            position: absolute;
            bottom: 20px;
            left: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 20px;
            background: rgba(255,255,255,0.1);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .logout-btn:hover {
            background: rgba(255,255,255,0.2);
            color: white;
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="layout">
        {% if app.user %}
            <!-- Sidebar for logged in users -->
            <div class="sidebar">
                <div class="sidebar-header">
                    <h2>Carpe Diem</h2>
                </div>
                
                <nav class="sidebar-menu">
                    {% if is_granted('ROLE_STAFF') %}
                        <a href="{{ path('app_dashboard_index') }}" class="menu-item {% if app.request.get('_route') starts with 'app_dashboard_index' %}active{% endif %}">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                            </svg>
                            Dashboard
                        </a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_STAFF') %}
                        <a href="{{ path('app_order_index') }}" class="menu-item {% if app.request.get('_route') starts with 'app_order' %}active{% endif %}">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                            </svg>
                            Orders
                        </a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_dashboard_products') }}" class="menu-item {% if app.request.get('_route') starts with 'app_dashboard_product' %}active{% endif %}">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                            </svg>
                            Products
                        </a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_STAFF') %}
                        <a href="{{ path('app_dashboard_stocks') }}" class="menu-item {% if app.request.get('_route') starts with 'app_dashboard_stock' %}active{% endif %}">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                            </svg>
                            Stocks
                        </a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_profile') }}" class="menu-item {% if app.request.get('_route') starts with 'app_profile' %}active{% endif %}">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            My Profile
                        </a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_user_index') }}" class="menu-item {% if app.request.get('_route') starts with 'app_user' %}active{% endif %}">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                            Users
                        </a>
                    {% endif %}
                    
                    {% if is_granted('ROLE_STAFF') %}
                        <a href="#" class="menu-item">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                            </svg>
                            Customers
                        </a>
                    {% endif %}
                    
                    {# Activity Logs - Admin Only #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_activity_log_index') }}" class="menu-item {% if app.request.get('_route') starts with 'app_activity_log' %}active{% endif %}">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Activity Logs
                        </a>
                    {% endif %}
                </nav>
                
                <a href="{{ path('app_logout') }}" class="logout-btn">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                    </svg>
                    Log Out
                </a>
            </div>
        {% endif %}

        <!-- Main content area -->
        <div class="main-content {% if app.user %}with-sidebar{% endif %}">
            {% block body %}{% endblock %}
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>