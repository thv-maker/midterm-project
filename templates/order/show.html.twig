{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
<style>
    .receipt-container {
        max-width: 800px;
        margin: 0 auto;
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .receipt-header {
        text-align: center;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
        margin-bottom: 30px;
    }

    .receipt-header h1 {
        color: #5d4037;
        font-size: 28px;
        margin-bottom: 10px;
    }

    .receipt-header .order-number {
        font-size: 20px;
        color: #6d4c41;
        font-weight: 600;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-item {
        padding: 15px;
        background: #f8f5f2;
        border-radius: 8px;
    }

    .info-label {
        font-size: 12px;
        color: #8d6e63;
        text-transform: uppercase;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 16px;
        color: #5d4037;
        font-weight: 600;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
    }

    .status-pending {
        background: #fff3e0;
        color: #f57c00;
    }

    .status-completed {
        background: #e8f5e9;
        color: #388e3c;
    }

    .status-cancelled {
        background: #ffebee;
        color: #c62828;
    }

    .order-total {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 2px solid #6d4c41;
        display: flex;
        justify-content: space-between;
        font-size: 24px;
        font-weight: 700;
        color: #5d4037;
    }

    .actions {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .btn-warning {
        background: #FF9800;
        color: white;
    }

    .btn-warning:hover {
        background: #F57C00;
    }

    .btn-secondary {
        background: #e0e0e0;
        color: #5d4037;
    }

    .btn-secondary:hover {
        background: #bdbdbd;
    }

    .btn-success {
        background: #4caf50;
        color: white;
    }

    .btn-success:hover {
        background: #388e3c;
    }

    .receipt-footer {
        text-align: center;
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px dashed #e0e0e0;
        color: #8d6e63;
        font-size: 14px;
    }
</style>

<div class="receipt-container">
    <div class="receipt-header">
        <h1>☕ Carpe Diem Cafe</h1>
        <div class="order-number">Order #{{ order.orderNumber }}</div>
    </div>

    <div class="info-grid">
        <div class="info-item">
            <div class="info-label">Customer</div>
            <div class="info-value">{{ order.customer.name }}</div>
        </div>

        <div class="info-item">
            <div class="info-label">Date & Time</div>
            <div class="info-value">{{ order.createdAt|date('M d, Y h:i A') }}</div>
        </div>

        <div class="info-item">
            <div class="info-label">Status</div>
            <div class="info-value">
                {% if order.status == 'pending' %}
                    <span class="status-badge status-pending">Pending</span>
                {% elseif order.status == 'completed' %}
                    <span class="status-badge status-completed">Completed</span>
                {% else %}
                    <span class="status-badge status-cancelled">Cancelled</span>
                {% endif %}
            </div>
        </div>

        <div class="info-item">
            <div class="info-label">Total Amount</div>
            <div class="info-value">₱{{ order.total|number_format(2) }}</div>
        </div>
    </div>

    <div class="order-total">
        <span>TOTAL PAID</span>
        <span>₱{{ order.total|number_format(2) }}</span>
    </div>

    <div class="actions">
        {% if order.status == 'pending' %}
            <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Edit Order
            </a>
        {% endif %}
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">Back to Orders</a>
        <button onclick="window.print()" class="btn btn-success">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
            </svg>
            Print Receipt
        </button>
    </div>

    <div class="receipt-footer">
        Thank you for your order!<br>
        Carpe Diem - Seize the Day ☕
    </div>
</div>

<style>
    @media print {
        body * {
            visibility: hidden;
        }
        .receipt-container, .receipt-container * {
            visibility: visible;
        }
        .receipt-container {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .actions {
            display: none;
        }
    }
</style>
{% endblock %}