{% extends 'base.html.twig' %}

{% block title %}Change Password - Carpe Diem{% endblock %}

{% block body %}
<style>
    .container {
        max-width: 600px;
        margin: 0 auto;
    }

    .page-header {
        background: white;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        margin-bottom: 30px;
    }

    .page-header h1 {
        color: #5d4037;
        font-size: 28px;
        font-weight: 600;
        margin: 0;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #8d6e63;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 20px;
        transition: color 0.3s;
    }

    .back-link:hover {
        color: #6d4c41;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .form-group {
        margin-bottom: 25px;
    }

    label {
        display: block;
        margin-bottom: 8px;
        color: #5d4037;
        font-weight: 600;
        font-size: 14px;
    }

    input[type="password"] {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s;
        box-sizing: border-box;
    }

    input[type="password"]:focus {
        outline: none;
        border-color: #8d6e63;
        box-shadow: 0 0 0 3px rgba(141, 110, 99, 0.1);
    }

    .invalid-feedback {
        color: #c62828;
        font-size: 13px;
        margin-top: 6px;
        display: block;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6d4c41 0%, #8d6e63 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(93, 64, 55, 0.3);
        width: 100%;
        justify-content: center;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(93, 64, 55, 0.4);
    }

    .alert {
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .alert-error {
        background: #ffebee;
        color: #c62828;
        border-left: 4px solid #c62828;
    }

    .password-requirements {
        background: #f8f5f2;
        padding: 15px;
        border-radius: 8px;
        margin-top: 30px;
    }

    .password-requirements h4 {
        color: #5d4037;
        font-size: 14px;
        margin: 0 0 10px 0;
        font-weight: 600;
    }

    .password-requirements ul {
        margin: 0;
        padding-left: 20px;
        color: #666;
        font-size: 13px;
        line-height: 1.8;
    }
</style>

<div class="container">
    <a href="{{ path('app_profile') }}" class="back-link">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Profile
    </a>

    <div class="page-header">
        <h1>Change Password</h1>
    </div>

    {% for message in app.flashes('error') %}
        <div class="alert alert-error">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 20px; height: 20px;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            {{ message }}
        </div>
    {% endfor %}

    <div class="form-card">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.currentPassword) }}
                {{ form_widget(form.currentPassword, {'attr': {'placeholder': 'Enter your current password'}}) }}
                {{ form_errors(form.currentPassword) }}
            </div>

            <div class="form-group">
                {{ form_label(form.newPassword.first) }}
                {{ form_widget(form.newPassword.first, {'attr': {'placeholder': 'Enter new password'}}) }}
                {{ form_errors(form.newPassword.first) }}
            </div>

            <div class="form-group">
                {{ form_label(form.newPassword.second) }}
                {{ form_widget(form.newPassword.second, {'attr': {'placeholder': 'Confirm new password'}}) }}
                {{ form_errors(form.newPassword.second) }}
            </div>

            <button type="submit" class="btn btn-primary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Update Password
            </button>
        {{ form_end(form) }}

        <div class="password-requirements">
            <h4>Password Requirements:</h4>
            <ul>
                <li>Minimum 6 characters long</li>
                <li>Use a combination of letters and numbers</li>
                <li>Avoid using common passwords</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}