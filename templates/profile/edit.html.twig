{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .form-header {
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .form-header h1 {
        color: #5d4037;
        font-size: 24px;
        font-weight: 600;
        margin: 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        color: #5d4037;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 14px;
        transition: all 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #6d4c41;
        box-shadow: 0 0 0 3px rgba(109, 76, 65, 0.1);
    }

    .form-actions {
        display: flex;
        gap: 10px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
    }

    .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .btn-primary {
        background: #6d4c41;
        color: white;
    }

    .btn-primary:hover {
        background: #5d4037;
    }

    .btn-secondary {
        background: #e0e0e0;
        color: #5d4037;
    }

    .btn-secondary:hover {
        background: #bdbdbd;
    }

    .alert-error {
        background: #ffebee;
        color: #c62828;
        border-left: 4px solid #f44336;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }
</style>

{% for message in app.flashes('error') %}
    <div class="alert-error">{{ message }}</div>
{% endfor %}

<div class="form-container">
    <div class="form-header">
        <h1>✏️ Edit Profile</h1>
    </div>

    <form method="post">
        <div class="form-group">
            <label class="form-label">Email Address</label>
            <input type="email" name="email" value="{{ user.email }}" class="form-control" required>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 18px; height: 18px;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Save Changes
            </button>
            <a href="{{ path('app_profile') }}" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
{% endblock %}