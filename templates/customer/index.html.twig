{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h1>Customers</h1>
                <a href="{{ path('app_customer_new') }}" class="btn btn-primary">+ Add New Customer</a>
            </div>
        </div>

        <div class="content-card">
            {% if customers is empty %}
                <div class="no-records" style="padding: 60px 0;">
                    <svg fill="none" stroke="#95a5a6" viewBox="0 0 24 24" style="width: 80px; height: 80px; margin: 0 auto 20px; display: block;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                    <p style="font-size: 18px;">No customers found</p>
                    <p style="color: #95a5a6; margin-top: 10px;">Start by adding your first customer!</p>
                </div>
            {% else %}
                <div class="customers-grid">
                    {% for customer in customers %}
                        <div class="customer-card">
                            <div class="customer-card-header">
                                <div class="customer-avatar">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 40px; height: 40px;">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                </div>
                                <div class="customer-info">
                                    <h3 class="customer-name">{{ customer.name }}</h3>
                                    <span class="customer-status status-{{ customer.status|lower }}">{{ customer.status }}</span>
                                </div>
                            </div>
                            
                            <div class="customer-card-body">
                                <div class="customer-contact">
                                    <div class="contact-item">
                                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                        </svg>
                                        <span>{{ customer.email }}</span>
                                    </div>
                                    <div class="contact-item">
                                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                        </svg>
                                        <span>{{ customer.phoneNumber }}</span>
                                    </div>
                                </div>
                                
                                <div class="customer-stats">
                                    <div class="stat-box">
                                        <div class="stat-label">Loyalty Points</div>
                                        <div class="stat-value">{{ customer.loyaltyPoints }}</div>
                                    </div>
                                    <div class="stat-box">
                                        <div class="stat-label">Total Spent</div>
                                        <div class="stat-value">â‚±{{ customer.totalPurchases }}</div>
                                    </div>
                                </div>

                                <div class="customer-dates">
                                    <div class="date-item">
                                        <span class="date-label">Joined:</span>
                                        <span class="date-value">{{ customer.dateJoined|date('M d, Y') }}</span>
                                    </div>
                                    <div class="date-item">
                                        <span class="date-label">Last Purchase:</span>
                                        <span class="date-value">{{ customer.lastPurchaseDate ? customer.lastPurchaseDate|date('M d, Y') : 'N/A' }}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="customer-card-footer">
                                <a href="{{ path('app_customer_show', {'id': customer.id}) }}" class="card-btn btn-show">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                    View
                                </a>
                                <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="card-btn btn-edit">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 16px; height: 16px;">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    Edit
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <style>
        .customers-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-top: 20px;
        }

        .customer-card {
            background: #fff;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .customer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(93, 64, 55, 0.15);
            border-color: #8d6e63;
        }

        .customer-card-header {
            padding: 25px;
            background: linear-gradient(135deg, #6d4c41 0%, #8d6e63 100%);
            color: white;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .customer-avatar {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .customer-info {
            flex: 1;
        }

        .customer-name {
            font-size: 20px;
            font-weight: 600;
            margin: 0 0 8px 0;
        }

        .customer-status {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            text-transform: capitalize;
        }

        .status-active {
            background: rgba(76, 175, 80, 0.2);
            color: #ffffff;
        }

        .status-inactive {
            background: rgba(158, 158, 158, 0.2);
            color: #ffffff;
        }

        .status-vip {
            background: rgba(255, 193, 7, 0.3);
            color: #ffffff;
        }

        .customer-card-body {
            padding: 20px;
            flex: 1;
        }

        .customer-contact {
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid #f0f0f0;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #666;
            font-size: 14px;
            margin-bottom: 8px;
        }

        .contact-item svg {
            color: #8d6e63;
            flex-shrink: 0;
        }

        .customer-stats {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 20px;
        }

        .stat-box {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
        }

        .stat-label {
            font-size: 12px;
            color: #666;
            margin-bottom: 8px;
        }

        .stat-value {
            font-size: 20px;
            font-weight: 600;
            color: #6d4c41;
        }

        .customer-dates {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .date-item {
            display: flex;
            justify-content: space-between;
            font-size: 13px;
        }

        .date-label {
            color: #666;
            font-weight: 500;
        }

        .date-value {
            color: #333;
        }

        .customer-card-footer {
            padding: 15px 20px;
            background: #f8f9fa;
            display: flex;
            gap: 10px;
            border-top: 1px solid #e0e0e0;
        }

        .card-btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            padding: 10px 16px;
            border-radius: 6px;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .card-btn.btn-show {
            background: #8d6e63;
            color: white;
        }

        .card-btn.btn-show:hover {
            background: #6d4c41;
        }

        .card-btn.btn-edit {
            background: #a1887f;
            color: white;
        }

        .card-btn.btn-edit:hover {
            background: #8d6e63;
        }

        @media (max-width: 768px) {
            .customers-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}