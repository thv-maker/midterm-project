{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <h1>Edit Product</h1>
        </div>

      

        <div class="content-card">
            {{ form_start(form, {'attr': {'class': 'product-form'}}) }}
                <div class="form-section">
                    <h2 class="section-title">Basic Information</h2>

                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter product name'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            {{ form_label(form.type) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.type) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.price) }}
                            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': '0.00', 'step': '0.01'}}) }}
                            {{ form_errors(form.price) }}
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <h2 class="section-title">Nutritional Information</h2>

                    <div class="form-row">
                        <div class="form-group">
                            {{ form_label(form.calories) }}
                            {{ form_widget(form.calories, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                            {{ form_errors(form.calories) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.sugarGrams) }}
                            {{ form_widget(form.sugarGrams, {'attr': {'class': 'form-control', 'placeholder': '0', 'step': '0.1'}}) }}
                            {{ form_errors(form.sugarGrams) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.caffeineMg) }}
                        {{ form_widget(form.caffeineMg, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                        {{ form_errors(form.caffeineMg) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Update Product</button>
            {{ form_end(form) }}
        </div>

        <div class="delete-section">
            <h3>Danger Zone</h3>
            <p>Once you delete this product, there is no going back. Please be certain.</p>
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}