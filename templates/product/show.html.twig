{% extends 'base.html.twig' %}

{% block title %}Product - {{ product.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <h1>{{ product.name }}</h1>
        </div>

        <div class="action-links">
            <a href="{{ path('app_product_index') }}">‚Üê Back to list</a>
        </div>

        <div class="content-card">
            <table class="table table-detail">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ product.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ product.name }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ product.type }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>${{ product.price }}</td>
                    </tr>
                    <tr>
                        <th>Calories</th>
                        <td>{{ product.calories }} kcal</td>
                    </tr>
                    <tr>
                        <th>Sugar Grams</th>
                        <td>{{ product.sugarGrams }} g</td>
                    </tr>
                    <tr>
                        <th>Caffeine (Mg)</th>
                        <td>{{ product.caffeineMg }} mg</td>
                    </tr>
                </tbody>
            </table>

            <div class="action-buttons">
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-edit">Edit Product</a>
            </div>
        </div>

        <div class="delete-section">
            <h3>Danger Zone</h3>
            <p>Once you delete this product, there is no going back. Please be certain.</p>
            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}