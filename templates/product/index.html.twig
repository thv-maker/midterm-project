{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <h1>Products</h1>
        </div>

        <div class="content-card">
            <div class="products-grid">
                {% for product in products %}
                    <div class="product-card">
                        <div class="product-header">
                            <h3>{{ product.name }}</h3>
                            <span class="product-type">{{ product.type }}</span>
                        </div>

                        <div class="product-price">
                            â‚±{{ product.price }}
                        </div>

                        <div class="product-nutrition">
                            <h4>Nutritional Information</h4>
                            <div class="nutrition-row">
                                <span class="nutrition-label">Calories:</span>
                                <span class="nutrition-value">{{ product.calories }} kcal</span>
                            </div>
                            <div class="nutrition-row">
                                <span class="nutrition-label">Sugar:</span>
                                <span class="nutrition-value">{{ product.sugarGrams }} g</span>
                            </div>
                            <div class="nutrition-row">
                                <span class="nutrition-label">Caffeine:</span>
                                <span class="nutrition-value">{{ product.caffeineMg }} mg</span>
                            </div>
                        </div>

                        <div class="product-actions">
                            <a href="{{ path('app_dashboard_product_show', {'id': product.id}) }}" class="btn btn-show">View</a>
                            <a href="{{ path('app_dashboard_product_edit', {'id': product.id}) }}" class="btn btn-edit">Edit</a>
                        </div>
                    </div>
                {% else %}
                    <div class="no-records">No products found</div>
                {% endfor %}
            </div>

            <a href="{{ path('app_dashboard_product_new') }}" class="btn btn-create">+ Add New Coffee</a>
        </div>
    </div>
{% endblock %}