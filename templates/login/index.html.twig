{% extends 'base.html.twig' %}

{% block title %}Log in - Carpe Diem Cafe{% endblock %}

{% block body %}
<div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div style="background: white; padding: 2rem; border-radius: 10px; box-shadow: 0 10px 25px rgba(0,0,0,0.2); max-width: 400px; width: 100%;">
        
        <h1 style="text-align: center; color: #5a4a42; margin-bottom: 0.5rem;">Carpe Diem Cafe</h1>
        <p style="text-align: center; color: #666; margin-bottom: 2rem;">Please sign in to continue</p>

        {% if error %}
            <div style="background: #fee; border: 1px solid #fcc; color: #c33; padding: 1rem; border-radius: 5px; margin-bottom: 1rem;">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            
            <div style="margin-bottom: 1rem;">
                <label for="inputEmail" style="display: block; margin-bottom: 0.5rem; color: #333; font-weight: 500;">Email Address</label>
                <input 
                    type="email" 
                    value="{{ last_username }}" 
                    name="email" 
                    id="inputEmail" 
                    required 
                    autofocus
                    style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 5px; font-size: 1rem;"
                    placeholder="admin@carpediem.com"
                >
            </div>

            <div style="margin-bottom: 1rem;">
                <label for="inputPassword" style="display: block; margin-bottom: 0.5rem; color: #333; font-weight: 500;">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="inputPassword" 
                    required
                    style="width: 100%; padding: 0.75rem; border: 1px solid #ddd; border-radius: 5px; font-size: 1rem;"
                    placeholder="Enter your password"
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button 
                type="submit" 
                style="width: 100%; padding: 0.75rem; background: #5a4a42; color: white; border: none; border-radius: 5px; font-size: 1rem; font-weight: 600; cursor: pointer; margin-top: 1rem;"
            >
                Sign In
            </button>
        </form>

        <div style="margin-top: 2rem; padding: 1rem; background: #f5f5f5; border-radius: 5px;">
            <p style="margin: 0 0 0.5rem 0; font-weight: 600; color: #333;">Test Accounts (for grading)</p>
            <ul style="margin: 0; padding-left: 1.5rem; color: #666; font-size: 0.9rem;">
                <li><strong>Admin:</strong> admin@carpediem.com / Admin123!</li>
                <li><strong>Staff:</strong> staff@carpediem.com / Staff123!</li>
                <li><strong>Customer:</strong> customer@carpediem.com / Customer123!</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}