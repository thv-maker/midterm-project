{% extends 'base.html.twig' %}

{% block title %}Customers - Carpe Diem Cafe{% endblock %}

{% block body %}
<div style="padding: 30px;">
    <div class="header">
        <h1>Customer Management</h1>
        <p>Manage your cafe customers</p>
    </div>
    
    <div style="background: white; border-radius: 10px; padding: 30px; margin-top: 20px;">
        <h2>Customers List</h2>
        <p>Customer management system for Carpe Diem Cafe.</p>
        
        <div style="margin-top: 30px; display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px;">
            <div style="background: #f8f9fa; padding: 20px; border-radius: 8px;">
                <h3 style="color: #6d4c41; margin-bottom: 10px;">Total Customers</h3>
                <p style="font-size: 32px; font-weight: bold; color: #4e342e;">42</p>
            </div>
            
            <div style="background: #f8f9fa; padding: 20px; border-radius: 8px;">
                <h3 style="color: #6d4c41; margin-bottom: 10px;">Active Today</h3>
                <p style="font-size: 32px; font-weight: bold; color: #4e342e;">12</p>
            </div>
            
            <div style="background: #f8f9fa; padding: 20px; border-radius: 8px;">
                <h3 style="color: #6d4c41; margin-bottom: 10px;">Loyalty Members</h3>
                <p style="font-size: 32px; font-weight: bold; color: #4e342e;">28</p>
            </div>
        </div>
        
        <div style="margin-top: 30px;">
            <h3>Recent Customers</h3>
            <table style="width: 100%; border-collapse: collapse; margin-top: 15px;">
                <thead>
                    <tr style="background: #f1f1f1;">
                        <th style="padding: 12px; text-align: left;">Name</th>
                        <th style="padding: 12px; text-align: left;">Email</th>
                        <th style="padding: 12px; text-align: left;">Phone</th>
                        <th style="padding: 12px; text-align: left;">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 12px;">Juan Dela Cruz</td>
                        <td style="padding: 12px;">juan@email.com</td>
                        <td style="padding: 12px;">09171234567</td>
                        <td style="padding: 12px;"><span style="color: green;">● Active</span></td>
                    </tr>
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 12px;">Maria Santos</td>
                        <td style="padding: 12px;">maria@email.com</td>
                        <td style="padding: 12px;">09171234568</td>
                        <td style="padding: 12px;"><span style="color: green;">● Active</span></td>
                    </tr>
                    <tr style="border-bottom: 1px solid #eee;">
                        <td style="padding: 12px;">Pedro Reyes</td>
                        <td style="padding: 12px;">pedro@email.com</td>
                        <td style="padding: 12px;">09171234569</td>
                        <td style="padding: 12px;"><span style="color: orange;">● Inactive</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <div style="margin-top: 30px; display: flex; gap: 15px;">
            <a href="{{ path('app_dashboard_index') }}" 
               style="background: #6d4c41; color: white; padding: 12px 24px; border-radius: 6px; text-decoration: none;">
                ← Back to Dashboard
            </a>
            <button style="background: #8d6e63; color: white; padding: 12px 24px; border-radius: 6px; border: none; cursor: pointer;">
                Add New Customer
            </button>
        </div>
    </div>
</div>
{% endblock %}