{% extends 'base.html.twig' %}

{% block title %}Customer Management{% endblock %}

{% block body %}
<style>
    .page-header {
        background: white;
        padding: 25px 30px;
        border-radius: 12px;
        margin-bottom: 25px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header h1 {
        color: #5d4037;
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background: #6d4c41;
        color: white;
    }

    .btn-primary:hover {
        background: #5d4037;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 14px;
    }

    .btn-info {
        background: #2196F3;
        color: white;
    }

    .btn-info:hover {
        background: #1976D2;
    }

    .btn-warning {
        background: #FF9800;
        color: white;
    }

    .btn-warning:hover {
        background: #F57C00;
    }

    .btn-danger {
        background: #f44336;
        color: white;
    }

    .btn-danger:hover {
        background: #d32f2f;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .stat-card h3 {
        color: #8d6e63;
        font-size: 14px;
        margin: 0 0 10px 0;
        font-weight: 500;
    }

    .stat-card .value {
        font-size: 32px;
        font-weight: 700;
        color: #5d4037;
        margin: 0;
    }

    .table-container {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table thead {
        border-bottom: 2px solid #f0f0f0;
    }

    .table th {
        padding: 12px;
        text-align: left;
        color: #8d6e63;
        font-size: 13px;
        font-weight: 600;
    }

    .table td {
        padding: 15px 12px;
        border-bottom: 1px solid #f8f8f8;
        color: #5d4037;
    }

    .table tbody tr:hover {
        background: #f8f5f2;
    }

    .badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-active {
        background: #e8f5e9;
        color: #388e3c;
    }

    .badge-inactive {
        background: #ffebee;
        color: #c62828;
    }

    .actions {
        display: flex;
        gap: 8px;
    }

    .no-data {
        text-align: center;
        padding: 40px;
        color: #95a5a6;
    }

    .delete-form {
        display: inline;
    }
</style>

<div class="page-header">
    <h1>ðŸ‘¥ Customer Management</h1>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <h3>Total Customers</h3>
        <p class="value">{{ customers|length }}</p>
    </div>
    <div class="stat-card">
        <h3>With Orders</h3>
        <p class="value">{{ customers|filter(c => c.orders|length > 0)|length }}</p>
    </div>
    <div class="stat-card">
        <h3>Total Orders</h3>
        <p class="value">{% set totalOrders = 0 %}{% for customer in customers %}{% set totalOrders = totalOrders + customer.orders|length %}{% endfor %}{{ totalOrders }}</p>
    </div>
</div>

<div class="table-container">
    {% if customers is empty %}
        <div class="no-data">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 60px; height: 60px; margin: 0 auto 15px; display: block; color: #bdc3c7;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <p>No customers found</p>
        </div>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Orders</th>
                </tr>
            </thead>
            <tbody>
                {% for customer in customers %}
                    <tr>
                        <td>#{{ customer.id }}</td>
                        <td><strong>{{ customer.name }}</strong></td>
                        <td>{{ customer.email }}</td>
                        <td>{{ customer.phone }}</td>
                        <td>{{ customer.address|length > 30 ? customer.address|slice(0, 30) ~ '...' : customer.address }}</td>
                        <td><strong>{{ customer.orders|length }}</strong> orders</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}