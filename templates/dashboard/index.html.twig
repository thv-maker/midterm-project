{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <style>
        .main-content {
            background: #f5f1ee !important;
        }

        .modern-dashboard-content {
            padding: 0;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            background: white;
            padding: 25px 30px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        }

        .dashboard-header h1 {
            color: #5d4037;
            margin: 0;
            font-size: 28px;
            font-weight: 600;
        }

        .dashboard-subtitle {
            color: #8d6e63;
            margin: 5px 0 0 0;
            font-size: 14px;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-profile-text {
            text-align: right;
        }

        .user-role {
            font-size: 12px;
            color: #8d6e63;
        }

        .user-name {
            font-size: 14px;
            color: #5d4037;
            font-weight: 600;
        }

        .avatar {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #6d4c41 0%, #8d6e63 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            gap: 20px;
            box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(93, 64, 55, 0.12);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(141, 110, 99, 0.1);
        }

        .stat-content {
            flex: 1;
        }

        .stat-label {
            font-size: 13px;
            color: #8d6e63;
            margin-bottom: 8px;
        }

        .stat-value {
            font-size: 28px;
            font-weight: 700;
            color: #5d4037;
            margin-bottom: 5px;
        }

        .stat-change {
            font-size: 12px;
            font-weight: 600;
            color: #4caf50;
        }

        .content-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
            margin-bottom: 25px;
        }

        .chart-card,
        .trending-card,
        .recent-orders-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 2px 8px rgba(93, 64, 55, 0.08);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .card-header h3 {
            margin: 0;
            font-size: 18px;
            color: #5d4037;
            font-weight: 600;
        }

        .card-header a {
            color: #8d6e63;
            font-size: 14px;
            text-decoration: none;
            transition: color 0.3s;
        }

        .card-header a:hover {
            color: #6d4c41;
        }

        .chart-placeholder {
            padding: 20px 0;
        }

        .quick-links {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .quick-link {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: #f8f5f2;
            border-radius: 12px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .quick-link:hover {
            background: #f0e8e3;
            transform: translateX(5px);
        }

        .quick-link-icon {
            width: 45px;
            height: 45px;
            background: white;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6d4c41;
        }

        .quick-link-icon svg {
            width: 22px;
            height: 22px;
        }

        .quick-link-content {
            flex: 1;
        }

        .quick-link-title {
            font-size: 15px;
            font-weight: 600;
            color: #5d4037;
            margin-bottom: 3px;
        }

        .quick-link-subtitle {
            font-size: 12px;
            color: #8d6e63;
        }

        .no-data {
            padding: 40px 20px;
            text-align: center;
        }

        @media (max-width: 1024px) {
            .content-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .dashboard-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
        }
    </style>

    <div class="modern-dashboard-content">
        <div class="dashboard-header">
            <div>
                <h1>Welcome to Carpe Diem</h1>
                <p class="dashboard-subtitle">Choose The Category</p>
            </div>
            <div class="user-profile">
                <div class="user-profile-text">
                    <div class="user-role">Admin</div>
                    <div class="user-name">Administrator</div>
                </div>
                <div class="avatar">
                    <svg fill="currentColor" viewBox="0 0 24 24" style="width: 24px; height: 24px;">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                </div>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <svg fill="none" stroke="#6d4c41" viewBox="0 0 24 24" style="width: 24px; height: 24px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Total Products</div>
                    <div class="stat-value">{{ totalProducts }}</div>
                    <div class="stat-change">Products in system</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <svg fill="none" stroke="#6d4c41" viewBox="0 0 24 24" style="width: 24px; height: 24px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Stock Items</div>
                    <div class="stat-value">{{ totalStocks }}</div>
                    <div class="stat-change">Items in inventory</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">
                    <svg fill="none" stroke="#6d4c41" viewBox="0 0 24 24" style="width: 24px; height: 24px;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-label">Total Revenue</div>
                    <div class="stat-value">₱{{ totalRevenue|number_format(2) }}</div>
                    <div class="stat-change {% if revenueChange >= 0 %}positive{% else %}negative{% endif %}">
                        {% if revenueChange >= 0 %}+{% endif %}{{ revenueChange|number_format(1) }}% from yesterday
                    </div>
                </div>
            </div>
        </div>

        <div class="content-grid">
            <div class="chart-card">
                <div class="card-header">
                    <h3>Sales Analytics (Last 7 Days)</h3>
                    <a href="#">See all</a>
                </div>
                <div class="chart-placeholder">
                    {% if salesData is empty %}
                        <svg viewBox="0 0 400 200" style="width: 100%; height: 200px;">
                            <path d="M 0 150 Q 50 120 100 140 T 200 100 T 300 130 T 400 90" 
                                  fill="none" 
                                  stroke="#8d6e63" 
                                  stroke-width="2"
                                  opacity="0.6"/>
                            <path d="M 0 150 Q 50 120 100 140 T 200 100 T 300 130 T 400 90 L 400 200 L 0 200 Z" 
                                  fill="url(#gradient)" 
                                  opacity="0.2"/>
                            <defs>
                                <linearGradient id="gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                                    <stop offset="0%" style="stop-color:#8d6e63;stop-opacity:0.3" />
                                    <stop offset="100%" style="stop-color:#8d6e63;stop-opacity:0" />
                                </linearGradient>
                            </defs>
                        </svg>
                        <p style="text-align: center; color: #95a5a6; margin-top: 20px;">No sales data available yet</p>
                    {% else %}
                        <div style="padding: 20px;">
                            <canvas id="salesChart" style="width: 100%; height: 250px;"></canvas>
                        </div>
                        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
                        <script>
                            const ctx = document.getElementById('salesChart');
                            const salesData = {{ salesData|json_encode|raw }};
                            
                            const labels = salesData.map(item => {
                                const date = new Date(item.date.date);
                                return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                            });
                            
                            const data = salesData.map(item => parseFloat(item.total));
                            
                            new Chart(ctx, {
                                type: 'line',
                                data: {
                                    labels: labels,
                                    datasets: [{
                                        label: 'Daily Sales (₱)',
                                        data: data,
                                        borderColor: '#8d6e63',
                                        backgroundColor: 'rgba(141, 110, 99, 0.1)',
                                        tension: 0.4,
                                        fill: true,
                                        pointBackgroundColor: '#6d4c41',
                                        pointBorderColor: '#fff',
                                        pointBorderWidth: 2,
                                        pointRadius: 5,
                                        pointHoverRadius: 7
                                    }]
                                },
                                options: {
                                    responsive: true,
                                    maintainAspectRatio: false,
                                    plugins: {
                                        legend: {
                                            display: false
                                        },
                                        tooltip: {
                                            backgroundColor: '#5d4037',
                                            padding: 12,
                                            titleFont: { size: 14, weight: 'bold' },
                                            bodyFont: { size: 13 },
                                            callbacks: {
                                                label: function(context) {
                                                    return '₱' + context.parsed.y.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2});
                                                }
                                            }
                                        }
                                    },
                                    scales: {
                                        y: {
                                            beginAtZero: true,
                                            ticks: {
                                                callback: function(value) {
                                                    return '₱' + value.toLocaleString('en-US');
                                                },
                                                color: '#8d6e63'
                                            },
                                            grid: {
                                                color: 'rgba(141, 110, 99, 0.1)'
                                            }
                                        },
                                        x: {
                                            ticks: {
                                                color: '#8d6e63'
                                            },
                                            grid: {
                                                display: false
                                            }
                                        }
                                    }
                                }
                            });
                        </script>
                    {% endif %}
                </div>
            </div>

            <div class="trending-card">
                <div class="card-header">
                    <h3>Recent Products</h3>
                    <a href="{{ path('app_dashboard_products') }}">See all</a>
                </div>
                <div class="quick-links">
                    {% if recentProducts is empty %}
                        <div style="text-align: center; padding: 20px; color: #95a5a6;">
                            <p>No products added yet</p>
                        </div>
                    {% else %}
                        {% for product in recentProducts %}
                            <a href="{{ path('app_dashboard_product_show', {'id': product.id}) }}" class="quick-link">
                                <div class="quick-link-icon">
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                                    </svg>
                                </div>
                                <div class="quick-link-content">
                                    <div class="quick-link-title">{{ product.name }}</div>
                                    <div class="quick-link-subtitle">₱{{ product.price }}</div>
                                </div>
                            </a>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="recent-orders-card">
            <div class="card-header">
                <h3>Low Stock Alert</h3>
                <a href="{{ path('app_dashboard_stocks') }}">See all</a>
            </div>
            {% if lowStockItems is empty %}
                <div class="no-data">
                    <svg fill="none" stroke="#4caf50" viewBox="0 0 24 24" style="width: 60px; height: 60px; margin: 0 auto 15px; display: block;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <p style="color: #4caf50; text-align: center;">All stock levels are good!</p>
                    <p style="color: #bdc3c7; text-align: center; font-size: 14px; margin-top: 5px;">No items need restocking at this time.</p>
                </div>
            {% else %}
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="border-bottom: 2px solid #f0f0f0;">
                                <th style="padding: 12px; text-align: left; color: #8d6e63; font-size: 13px; font-weight: 600;">Product</th>
                                <th style="padding: 12px; text-align: center; color: #8d6e63; font-size: 13px; font-weight: 600;">Current Qty</th>
                                <th style="padding: 12px; text-align: center; color: #8d6e63; font-size: 13px; font-weight: 600;">Reorder Level</th>
                                <th style="padding: 12px; text-align: center; color: #8d6e63; font-size: 13px; font-weight: 600;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for stock in lowStockItems %}
                                <tr style="border-bottom: 1px solid #f8f8f8;">
                                    <td style="padding: 15px;">
                                        <div style="font-weight: 600; color: #5d4037;">{{ stock.product.name }}</div>
                                    </td>
                                    <td style="padding: 15px; text-align: center; font-weight: 600; color: #5d4037;">{{ stock.quantity }}</td>
                                    <td style="padding: 15px; text-align: center; color: #666;">{{ stock.reorderLevel }}</td>
                                    <td style="padding: 15px; text-align: center;">
                                        {% if stock.quantity == 0 %}
                                            <span style="padding: 6px 12px; background: #ffebee; color: #c62828; border-radius: 20px; font-size: 12px; font-weight: 600;">Out of Stock</span>
                                        {% else %}
                                            <span style="padding: 6px 12px; background: #fff3e0; color: #f57c00; border-radius: 20px; font-size: 12px; font-weight: 600;">Low Stock</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}